{
	"comments": {
		"lineComment": "//",
		"blockComment": [ "/*", "*/" ]
	},
	"brackets": [
		["{", "}"],
		["[", "]"],
		["(", ")"]
	],
	"autoClosingPairs": [
		["{", "}"],
		["[", "]"],
		["(", ")"],
		["\"", "\""],
		["'", "'"],
        ["%(hook|group|subclass)", "%end"]

	],
	"surroundingPairs": [
		["{", "}"],
		["[", "]"],
		["(", ")"],
		["\"", "\""],
		["'", "'"],
        ["%(hook|group|subclass)", "%end"]

	],
    "folding": {
        "markers": {
            "start": "%(hook|group|subclass)",
            "end": "%end"
        }
    }
}
